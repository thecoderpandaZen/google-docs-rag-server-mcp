FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y \
    gcc \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

COPY pyproject.toml .
RUN pip install --no-cache-dir -e .

COPY src/ src/
COPY alembic.ini .

ENV PYTHONPATH=/app

CMD ["uvicorn", "gdrive_rag.api.main:app", "--host", "0.0.0.0", "--port", "8001"]
